<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.PurchaseOrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="PurchaseOrderPage"
      Background="#F4F4F4">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Label Content="Supplier Name:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <TextBox Width="200" Text="{Binding PurchaseOrder.SupplierName, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Enter Supplier Name" Style="{StaticResource MaterialDesignTextBox}" BorderBrush="Black"   Margin="0,0,50,0"/>

            
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="394,0,0,10">
       
        <Label Content="Order Date:" VerticalAlignment="Center" Margin="0,0,30,0"/>
        <DatePicker Width="150" SelectedDate="{Binding PurchaseOrder.OrderDate}" Margin="0,0,50,0"/>
        </StackPanel>

        <!-- Product + Quantity -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Label Content="Product:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <ComboBox Width="150" Height="50"
                      ItemsSource="{Binding Products}" 
                      SelectedItem="{Binding PurchaseOrder.SelectedProduct}" 
                      DisplayMemberPath="Name"
                      Margin="36,0,100,0" materialDesign:HintAssist.Hint="Select Product" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
   
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="406,0,0,10">
            <Label Content="Quantity:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <TextBox Width="150" 
                 Text="{Binding PurchaseOrder.Quantity, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,50,0"
                 materialDesign:HintAssist.Hint="Qty" Style="{StaticResource MaterialDesignTextBox}"/>
        </StackPanel>  

        <!-- Price (Read Only) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="425,0,0,10">
            <Label Content="Price:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <TextBox Width="150" 
             Text="{Binding PurchaseOrder.PurchasePrice}"        
             IsReadOnly="True"
             Margin="0,0,50,0" materialDesign:HintAssist.Hint="Qty" Style="{StaticResource MaterialDesignTextBox}"/>
        </StackPanel>


        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="New" 
                    Command="{Binding NewPurchaseOrderCommand}"
                    Style="{DynamicResource MaterialDesignRaisedSecondaryDarkButton}"
                    Width="100" Height="35" Margin="10,0" Background="#FF38ADCE" Foreground="White"/>

            <Button Content="Save" 
                    Command="{Binding SavePurchaseOrderCommand}"
                    Style="{DynamicResource MaterialDesignRaisedSecondaryDarkButton}"
                    Width="100" Height="35" Margin="10,0" Background="#FF1F9E30" Foreground="White"/>
        </StackPanel>

        <!-- Purchase Order List -->
        <StackPanel Grid.Row="3" Margin="0,80,0,0">
            <TextBlock Text="Purchase Orders" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView ItemsSource="{Binding PurchaseOrders}" 
                      SelectedItem="{Binding SelectedPurchaseOrder}"
                      Style="{StaticResource MaterialDesignListView}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Supplier Name" Width="250" DisplayMemberBinding="{Binding SupplierName}"/>
                        <GridViewColumn Header="Order Date" Width="250" DisplayMemberBinding="{Binding OrderDate}"/>
                        <GridViewColumn Header="Product" Width="200" DisplayMemberBinding="{Binding Product.Name}"/>
                        <GridViewColumn Header="Quantity" Width="200" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Header="Price" Width="150" DisplayMemberBinding="{Binding PurchasePrice}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>



