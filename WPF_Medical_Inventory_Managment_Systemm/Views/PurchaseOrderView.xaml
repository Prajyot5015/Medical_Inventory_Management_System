<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.PurchaseOrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WPF_Medical_Inventory_Managment_Systemm.Converters"
      mc:Ignorable="d"
      Title="PurchaseOrderPage"
      Background="#F4F4F4">


    <Page.Resources>
        <local:QuantityConverter x:Key="QuantityConverter" />
    </Page.Resources>



    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Label Content="Supplier Name:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <TextBox Width="200" Text="{Binding PurchaseOrder.SupplierName, UpdateSourceTrigger=PropertyChanged}"
                      BorderBrush="Black"   Margin="0,0,50,0" Padding="2,2,2,2"/>

            
        </StackPanel>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="394,0,0,10">
       
        <Label Content="Order Date:" VerticalAlignment="Center" Margin="0,0,30,0"/>
        <DatePicker Width="150" SelectedDate="{Binding PurchaseOrder.OrderDate}" Margin="0,0,50,0"/>
        </StackPanel>

        <!-- Product + Quantity -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Label Content="Product:" VerticalAlignment="Center" Margin="0,10,30,0"/>
            <ComboBox Width="130" Height="40"
          ItemsSource="{Binding Products}" 
          SelectedItem="{Binding SelectedProduct}" 
          DisplayMemberPath="Name"
          Margin="45,20,100,0"/>


        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="406,10,0,10">
            <Label Content="Quantity:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <TextBox Width="150"
         Text="{Binding PurchaseOrder.Quantity,Converter={StaticResource QuantityConverter}, UpdateSourceTrigger=PropertyChanged,TargetNullValue=''}" 
         Margin="0,0,50,0"/>

        </StackPanel>  

        <!-- Price (Read Only) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="430,0,0,10">
            <Label Content="Price:" VerticalAlignment="Center" Margin="0,0,30,0"/>
            <TextBox Width="150" 
         Text="{Binding PurchasePrice,UpdateSourceTrigger=PropertyChanged}"        
         IsReadOnly="True"
         Margin="0,0,50,0"/>

        </StackPanel>


        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="90,90,0,0">
            <Button Content="New" 
                    Command="{Binding NewPurchaseOrderCommand}"
                    Width="100" Height="35" Margin="10,0" Background="#FF38ADCE" Foreground="White"/>

            <Button Content="Save" 
                    Command="{Binding SavePurchaseOrderCommand}"
                   
                    Width="100" Height="35" Margin="30,0,70,0" Background="#FF1F9E30" Foreground="White"/>
        </StackPanel>

        <!-- Purchase Order List -->
        <Grid Grid.Row="3" Margin="0,0,0,0">

            <StackPanel Margin="0,0,0,0">
            <TextBlock Text="Purchase Orders" FontSize="18" FontWeight="Bold" Margin="20,0,0,10"/>
            </StackPanel>

            <ListView Grid.Row="1" Margin="0,40,20,20"
              ItemsSource="{Binding PurchaseOrders}" 
              SelectedItem="{Binding SelectedPurchaseOrder}"
              
              ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Supplier Name" Width="250" DisplayMemberBinding="{Binding SupplierName}"/>
                        <GridViewColumn Header="Order Date" Width="250" DisplayMemberBinding="{Binding OrderDate}"/>
                        
                        <GridViewColumn Header="Product" Width="200" DisplayMemberBinding="{Binding DisplayProductName}"/>
                        <GridViewColumn Header="Quantity" Width="200" DisplayMemberBinding="{Binding DisplayQuantity}"/>
                        <GridViewColumn Header="Price" Width="150" DisplayMemberBinding="{Binding DisplayPurchasePrice}"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>


        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>


    
    
    
    
    

