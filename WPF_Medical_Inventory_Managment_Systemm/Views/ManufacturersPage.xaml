<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.ManufacturersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WPF_Medical_Inventory_Managment_Systemm.Views"
      mc:Ignorable="d"
      Title="ManufacturersPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10" Background="#FF96C3C1">
            <TextBlock Text="Manufacturers" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="Search by ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Width="100" Text="{Binding SearchId, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Search" Command="{Binding GetManufacturerByIdCommand}" Margin="5,0,0,0" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,35,0,-13" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Manufacturers" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListView ItemsSource="{Binding Manufacturers}" SelectedItem="{Binding SelectedManufacturer}" Height="300" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                            <GridViewColumn Header="Contact" DisplayMemberBinding="{Binding ContactDetails}" Width="150"/>
                            <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}" Width="180"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Content="Refresh" Command="{Binding LoadManufacturersCommand}" Margin="0,10,0,0" Height="30"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Manufacturer Details" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedManufacturer.Name}" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Contact Details:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedManufacturer.ContactDetails}" Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Address:" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedManufacturer.Address}" Margin="0,0,0,5"/>

                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="New" Command="{Binding NewManufacturerCommand}" Width="80" Margin="0,0,10,0" Background="#FF38ADCE"/>
                        <Button Content="Save" Command="{Binding SaveManufacturerCommand}" Width="80" Margin="0,0,10,0" Background="#FF1F9E30"/>
                        <Button Content="Delete" Command="{Binding DeleteManufacturerCommand}" Width="80"  Background="#FFD21212"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Page>
