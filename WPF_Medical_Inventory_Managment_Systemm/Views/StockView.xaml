<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.StockView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:WPF_Medical_Inventory_Managment_Systemm.Views"
      Title="Stock Management"
      Height="Auto"
      Width="Auto">

    <Page.Resources>
        <Style x:Key="StockButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0"
                    x:Name="MainTabControl"
                    Margin="10"
                    FontSize="14"
                    FontWeight="SemiBold"
                    SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">

            <!-- All Stock Tab -->
            <TabItem Header="All Stock">
                <DataGrid x:Name="StockDataGrid"
                          AutoGenerateColumns="False"
                          Margin="5"
                          ItemsSource="{Binding StockList}"
                          IsReadOnly="True"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Stock Id" Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" />
                        <DataGridTextColumn Header="Product Id" Binding="{Binding ProductId}" />
                        <DataGridTextColumn Header="Batch" Binding="{Binding Batch}" />
                        <DataGridTextColumn Header="Brand" Binding="{Binding BrandName}" />
                        <DataGridTextColumn Header="Manufacturer" Binding="{Binding ManufacturerName}" />
                        <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock}" />
                        <DataGridTextColumn Header="Low Stock Threshold" Binding="{Binding LowStockThreshold}" />
                        <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat=d}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Low Stock Tab -->
            <TabItem Header="Low Stock">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="119*"/>
                        <ColumnDefinition Width="110*"/>
                        <ColumnDefinition Width="9*"/>
                        <ColumnDefinition Width="119*"/>
                        <ColumnDefinition Width="119*"/>
                        <ColumnDefinition Width="119*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="LowStockDataGrid"
                              AutoGenerateColumns="False"
                              Margin="5,5,5,5"
                              Grid.Row="0"
                              ItemsSource="{Binding LowStockList}"
                              SelectedItem="{Binding SelectedStockItem, Mode=TwoWay}"
                              IsReadOnly="True"
                              SelectionChanged="LowStockDataGrid_SelectionChanged"
                              CanUserAddRows="False" Grid.ColumnSpan="6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stock Id" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" />
                            <DataGridTextColumn Header="Product Id" Binding="{Binding ProductId}" />

                            <DataGridTextColumn Header="Batch" Binding="{Binding Batch}" />
                            <DataGridTextColumn Header="Brand" Binding="{Binding BrandName}" />
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock}" />
                            <DataGridTextColumn Header="Low Stock Threshold" Binding="{Binding LowStockThreshold}" />

                            <DataGridTemplateColumn Header="Actions">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Add Stock"
                        Style="{StaticResource StockButtonStyle}"
                        Command="{Binding DataContext.AddStockCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                        CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>


                </Grid>
            </TabItem>

            <!-- Near Expiry Tab -->
            <TabItem Header="Near Expiry">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="83*"/>
                        <ColumnDefinition Width="155*"/>
                        <ColumnDefinition Width="239*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="NearExpiryDataGrid"
                              AutoGenerateColumns="False"
                              Margin="5,5,5,5"
                              Grid.Row="0"
                              ItemsSource="{Binding NearExpiryStockList}"
                              SelectedItem="{Binding SelectedStockItem, Mode=TwoWay}"
                              IsReadOnly="True"
                              CanUserAddRows="False" Grid.ColumnSpan="3">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Stock Id" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" />
                            <DataGridTextColumn Header="Product Id" Binding="{Binding ProductId}" />

                            <DataGridTextColumn Header="Batch" Binding="{Binding Batch}" />
                            <DataGridTextColumn Header="Brand" Binding="{Binding BrandName}" />
                            <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat=d}" />
                            <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentStock}" />

                            <DataGridTemplateColumn Header="Actions">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Add Stock"
                        Style="{StaticResource StockButtonStyle}"
                        Command="{Binding DataContext.AddStockCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                        CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>


                </Grid>
            </TabItem>

            <!-- Add Stock Tab -->
            <TabItem Header="Add Stock">
                <StackPanel Margin="20" Width="300">
                    <TextBlock Text="Add Stock to Product" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBlock Text="Select Product:" Margin="0,10,0,0"/>
                    <ComboBox ItemsSource="{Binding Products}"
                  DisplayMemberPath="Id"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding SelectedProductId, Mode=TwoWay}"
                  Margin="0,0,0,10"/>

                    <TextBlock Text="Product Name:"  Margin="0,10,0,0"/>
                    <ComboBox ItemsSource="{Binding Products}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding SelectedProductId, Mode=TwoWay}"
                  Margin="0,0,0,10"
                  IsReadOnly="True"/>


                    <TextBlock Text="Quantity to Add:" Margin="0,10,0,0"/>
                    <TextBox Text="{Binding QuantityToAdd, UpdateSourceTrigger=PropertyChanged}" />

                    <Button Content="Add Stock"
                Margin="0,20,0,0"
                Padding="5"
                Width="100"
                HorizontalAlignment="Left"
                Command="{Binding AddStockCommand}" />
                </StackPanel>
            </TabItem>


        </TabControl>

        <!-- Bottom Buttons (without Add Stock now) -->
        <ScrollViewer Grid.Row="1"
                      Margin="10"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Load All Stock"
                        Command="{Binding LoadStockDataCommand}"
                        Style="{StaticResource StockButtonStyle}"/>
                <Button Content="Load Low Stock"
                        Command="{Binding LoadLowStockCommand}"
                        Style="{StaticResource StockButtonStyle}"/>
                <Button Content="Load Near Expiry"
                        Command="{Binding LoadNearExpiryCommand}"
                        Style="{StaticResource StockButtonStyle}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
