<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.BrandView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Brand Management" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200"
                     Margin="0,0,10,0"
                     Text="{Binding SelectedBrand.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0,0,5,0"/>
            <Button Content="Update" Command="{Binding UpdateCommand}" Margin="0,0,5,0"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Brands}"
                  SelectedItem="{Binding SelectedBrand, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
