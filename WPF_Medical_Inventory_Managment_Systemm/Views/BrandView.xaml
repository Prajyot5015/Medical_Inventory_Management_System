<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.BrandView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Brand Management">

    <Page.Resources>
        <!-- Button Style for reuse -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MaxWidth" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Hover Row Effect -->
        <Style x:Key="DataGridRowHover" TargetType="DataGridRow">
            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.3" To="#B3E5FC" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.3" To="#FFFFFF" Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Section -->
        <DockPanel Margin="0,0,0,10" LastChildFill="True">
            <TextBox 
                Text="{Binding SelectedBrand.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Padding="8"
                FontSize="14"
                VerticalContentAlignment="Center"
                BorderBrush="#B0BEC5"
                BorderThickness="1"
                MinWidth="180"
                MaxWidth="400"
                HorizontalAlignment="Stretch"
                DockPanel.Dock="Left"
                Margin="0,0,10,0"
            />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Add" Command="{Binding AddCommand}" Style="{StaticResource ActionButtonStyle}" Background="#4CAF50" Margin="0,0,5,0"/>
                <Button Content="Update" Command="{Binding UpdateCommand}" Style="{StaticResource ActionButtonStyle}" Background="#FFF38B21" Margin="0,0,5,0"/>
                <Button Content="Delete" Command="{Binding DeleteCommand}" Style="{StaticResource ActionButtonStyle}" Background="#FF862019" Margin="0,0,5,0"/>
                <Button Content="Refresh" Command="{Binding LoadCommand}" Style="{StaticResource ActionButtonStyle}" Background="#FF14A7EE"/>
            </StackPanel>
        </DockPanel>

        <!-- DataGrid Section -->
        <Border Grid.Row="1" Padding="10" Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
            </Border.Effect>

            <DataGrid
                ItemsSource="{Binding Brands}"
                SelectedItem="{Binding SelectedBrand, Mode=TwoWay}"
                AutoGenerateColumns="False"
                SelectionMode="Single"
                IsReadOnly="True"
                RowBackground="#F9F9F9"
                AlternatingRowBackground="#E1F5FE"
                FontSize="14"
                RowStyle="{StaticResource DataGridRowHover}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                CanUserResizeColumns="True"
                CanUserResizeRows="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="BrandName" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
