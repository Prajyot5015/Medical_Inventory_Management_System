<Page x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.BrandView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Brand Management"
      Background="#F8DAD0">

    <Page.Resources>
        <!-- DataGrid Row Hover Style -->
        <Style x:Key="DataGridRowHover" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource WhiteBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Heading -->
            <TextBlock Text="Brand Management"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBlueBrush}"
                       Margin="0,0,0,20" />

            <!-- Form Section -->
            <StackPanel Grid.Row="0" Margin="0,40,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left">
                    <TextBox Text="{Binding SelectedBrand.Id}"
                             IsReadOnly="True"
                             Width="80"
                             Margin="0,0,10,0"
                             Padding="6"
                             BorderBrush="{StaticResource MediumGrayBrush}"
                             materialDesign:HintAssist.Hint="Brand Id"
                             Style="{StaticResource MaterialTextBox}"/>
                    <TextBox Text="{Binding SelectedBrand.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Enter brand name"
                             Width="200"
                             Padding="6"
                             />
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Add"
                            Width="100"
                            Command="{Binding AddCommand}"
                            Style="{StaticResource SuccessButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="Update"
                            Width="100"
                            Command="{Binding UpdateCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="Refresh"
                            Width="100"
                            Command="{Binding LoadCommand}"
                            Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </StackPanel>

            <!-- DataGrid Section -->
            <Border Grid.Row="1"
                    Style="{StaticResource InventoryCard}">
                <DataGrid ItemsSource="{Binding Brands}"
                          SelectedItem="{Binding SelectedBrand, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          RowStyle="{StaticResource DataGridRowHover}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Brand Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete"
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Center"
                                            Style="{StaticResource DangerButton}"
                                            Padding="6,2"                                
                                            Width="100"
                                            Height="30"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>