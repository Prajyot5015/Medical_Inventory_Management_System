<Window x:Class="WPF_Medical_Inventory_Managment_Systemm.Views.SaleDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Medical_Inventory_Managment_Systemm.Views"
        mc:Ignorable="d"
        Title="Sale Details" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sale Header Information -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding CustomerName}" FontSize="18" FontWeight="Bold"/>
            <TextBlock>
                <Run Text="Sale ID:" FontWeight="Bold"/>
                <Run Text="{Binding Id}"/>
            </TextBlock>
            <TextBlock>
                <Run Text="Date:" FontWeight="Bold"/>
                <Run Text="{Binding SaleDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
            </TextBlock>
        </StackPanel>

        <!-- Items Grid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Items}" AutoGenerateColumns="False" 
                 Margin="0,10,0,0" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="*"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:C}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Total Amount -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="Total:" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:C}}" FontWeight="Bold" FontSize="16"/>
        </StackPanel>
        <Button Grid.Row="3" Content="Close" Width="100" HorizontalAlignment="Right" Click="CloseButton_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>