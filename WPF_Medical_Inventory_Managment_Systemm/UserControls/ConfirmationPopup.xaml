<UserControl x:Class="WPF_Medical_Inventory_Managment_Systemm.UserControls.ConfirmationPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400">
    <Border Background="White" 
            BorderBrush="{StaticResource MediumGrayBrush}" 
            BorderThickness="4" 
            CornerRadius="20"
            Padding="20">
        <Grid Height="152" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Icon -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon x:Name="MessageIcon" 
                                       Width="24" 
                                       Height="24"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                <TextBlock x:Name="TitleText" 
                          Text="Confirmation"
                          FontSize="18"
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Message Content -->
            <TextBlock x:Name="MessageText" 
                       Grid.Row="1"
                       Text="Are you sure you want to perform this action?"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10"
                       TextAlignment="Center"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0">
                <Button x:Name="ConfirmButton"
                        Content="Confirm"
                        Width="100"
                        Margin="0,0,10,0"
                        Style="{StaticResource DangerButton}"
                        Click="ConfirmButton_Click"/>

                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="100"
                        Style="{StaticResource PrimaryButton}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>