<mah:MetroWindow x:Class="WPF_Medical_Inventory_Managment_Systemm.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:WPF_Medical_Inventory_Managment_Systemm"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 mc:Ignorable="d"
                 Title="Medical Inventory Dashboard"
                 Height="700"
                 Width="1200"
                 WindowStartupLocation="CenterScreen"
                 GlowBrush="{DynamicResource PrimaryBlueBrush}"
                 NonActiveGlowBrush="{DynamicResource MediumGrayBrush}"
                 BorderThickness="1">

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- External Styles -->
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>


            <!-- Color Definitions -->
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#2E3B4E"/>
            <SolidColorBrush x:Key="HoverBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="PressedBrush" Color="#388E3C"/>
            <SolidColorBrush x:Key="TextLightBrush" Color="White"/>
            <SolidColorBrush x:Key="TextDarkBrush" Color="#212121"/>
            <SolidColorBrush x:Key="MainBackgroundBrush" Color="#F5F5F5"/>

            <Button Content="Stock Management" Margin="10" Click="NavigateToStockPage" Style="{DynamicResource MetroButton}"/>
            <Button Content="Purchase Ordered" Margin="10" Click="NavigateToPurchaseOrderPage" Style="{DynamicResource MetroButton}"/>

            <!-- Navigation Button Style -->
            <Style x:Key="NavButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextLightBrush}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="15,12"/>
                <Setter Property="Margin" Value="5,2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter Content="{TemplateBinding Content}" 
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="Center" 
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="{StaticResource PressedBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </mah:MetroWindow.Resources>

    <DockPanel>
        <!-- Navigation Panel -->
        <Border DockPanel.Dock="Left" 
                Width="220" 
                Background="{StaticResource SidebarBackgroundBrush}">
            <StackPanel>
                <!-- App Title/Header -->
                <Border Background="#0066B3" Padding="15,20">
                    <TextBlock Text="MEDICAL INVENTORY" 
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Margin="10,20,10,0">
                    <Button Content="Manufacturers" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToManufacturerPage"/>

                    <Button Content="Brands" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToBrandPage"/>

                    <Button Content="Products" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToProductPage"/>

                    <Button Content="Stock Management" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToStockPage"/>

                    <Button Content="Sales" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="NavigateToSalePage"/>
                </StackPanel>

                <!-- Footer/User Area -->
                <Border Background="#0066B3" 
                        Margin="0,20,0,0" 
                        Padding="10"
                        VerticalAlignment="Bottom">
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"
               Background="{StaticResource MainBackgroundBrush}"/>
    </DockPanel>
</mah:MetroWindow>
